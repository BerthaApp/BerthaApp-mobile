<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/departure_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:00am"
            android:layout_weight="1"
            />
f

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="May 20"
            android:layout_weight="1"
            android:gravity="center_vertical"/>


        <TextView
            android:id="@+id/arrive_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:00am"
            android:layout_weight="1"
            android:gravity="bottom"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/departure_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="San Rafel Escazu"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>


        <TextView
            android:id="@+id/avg_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.2"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black_overlay"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km/h"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black_overlay"
            android:textSize="11sp"/>
        <TextView
            android:id="@+id/arrive_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avenida 10 San Jose"
            android:layout_weight="1"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        >

        <TextView
            android:id="@+id/avg_literKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:layout_weight="1"
            android:textColor="@color/black_overlay"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="L/100KM"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textColor="@color/black_overlay"
            android:textSize="11sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/avg_fuelCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$3.9"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:layout_weight="1"
            android:textColor="@color/black_overlay"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fuel"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="11sp"
            android:textColor="@color/black_overlay"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/avg_timeTravel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textColor="@color/black_overlay"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:textSize="11sp"
            android:textColor="@color/black_overlay"/>

    </LinearLayout>





</LinearLayout>