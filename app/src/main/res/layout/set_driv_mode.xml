<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/eco_drive_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_weight="1"
        android:background="@drawable/group1902x" />

    <Button
        android:id="@+id/normal_drive_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="25dp"
        android:layout_weight="1"
        android:background="@drawable/group1912x" />

    <Button
        android:id="@+id/aggresive_drive_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:layout_weight="1"
        android:background="@drawable/group1922x" />
</LinearLayout>